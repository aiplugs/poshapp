<template id="toast-component">
    <v-snackbar :value="display" 
                :color="color" 
                :top="top" 
                :bottom="bottom" 
                :left="left" 
                :right="right">
        {{ text }}
    </v-snackbar>
</template>

<script>
    Vue.component('Toast', {
        template: '#toast-component',
        computed: {
            ...Vuex.mapState('toast', ['display', 'text', 'color', 'top', 'bottom', 'left', 'right']),            
        },
    })
</script>